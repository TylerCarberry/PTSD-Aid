<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.tylercarberry.ptsd.PhoneFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/veterans_crisis_line_cardview"
                android:layout_marginBottom="@dimen/activity_vertical_margin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/veteran_support_imageview"
                        android:src="@drawable/veterans_crisis_line"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:id="@+id/veteran_support_phone_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/veteran_support_imageview"
                        android:gravity="center_horizontal"
                        android:text="@string/phone_veterans_crisis_line"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/veteran_support_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/veteran_support_phone_textview"
                        android:text="Veterans press 1"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/suicide_lifeline_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/veterans_crisis_line_cardview"
                android:layout_marginBottom="@dimen/activity_vertical_margin" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/suicide_lifeline_imageview"
                        android:src="@drawable/nspl"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:id="@+id/suicide_lifeline_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/suicide_lifeline_imageview"
                        android:gravity="center_horizontal"
                        android:text="@string/phone_veterans_crisis_line"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/suicide_lifeline_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/suicide_lifeline_textview"
                        android:text="More info about the suicide lifeline goes here"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/alcoholism_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/suicide_lifeline_cardview"
                android:layout_marginBottom="@dimen/activity_vertical_margin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp" >

                    <ImageView
                        android:id="@+id/alcoholism_helpline_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ncadd"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:id="@+id/alcoholism_helpline_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/alcoholism_helpline_imageview"
                        android:gravity="center_horizontal"
                        android:text="@string/phone_alcoholism"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/safe_helpline_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/alcoholism_helpline_textview"
                        android:text="More info about the alcohol hotline goes here"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/veterans_foundation_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/alcoholism_cardview"
                android:layout_marginBottom="@dimen/activity_vertical_margin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp" >

                    <ImageView
                        android:id="@+id/veterans_foundation_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/nvf"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:id="@+id/veterans_foundation_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/veterans_foundation_imageview"
                        android:gravity="center_horizontal"
                        android:text="@string/phone_veterans_foundation_hotline"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/veterans_foundation_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/veterans_foundation_textview"
                        android:text="More info about the veteran foundation goes here"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
