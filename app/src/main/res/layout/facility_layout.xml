<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/facility_cardview"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/facility_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/veterans_crisis_line"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/facility_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/facility_imageview"
                android:text="Placeholder Name"
                android:gravity="center"
                android:background="@color/transparent_white"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/facility_phone_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/facility_name_textview"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:text="Phone Placeholder"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/facility_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_below="@+id/facility_phone_textview"
                android:text="Detail Placeholder"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>