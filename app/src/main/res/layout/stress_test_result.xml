<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/results_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Results"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/results_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer"
        android:layout_below="@+id/results_title_textview"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/next_steps_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/results_textview"
        android:text="Next Steps"/>

    <Button
        android:id="@+id/share_results_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Results"
        android:layout_below="@+id/next_steps_textview"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/find_professional_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find professional"
        android:layout_below="@+id/share_results_button"
        android:layout_centerHorizontal="true" />
</RelativeLayout>