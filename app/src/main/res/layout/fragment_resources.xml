<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tytanapps.ptsd.ResourcesFragment">

    <com.tytanapps.ptsd.StickyScrollView
        android:id="@+id/resources_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="70dp">

            <TextView
                android:id="@+id/symptoms_title_textview"
                android:theme="@style/LargeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:gravity="center_horizontal"
                android:background="@color/colorPrimaryDark"
                android:text="@string/symptoms"
                android:textColor="@color/white"
                android:tag="sticky"/>

            <TextView
                android:id="@+id/symptoms_textview"
                android:theme="@style/SmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/symptoms_title_textview"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="@string/symptoms_detail"/>

            <TextView
                android:id="@+id/causes_title_textview"
                android:theme="@style/LargeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/symptoms_textview"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:background="@color/colorPrimaryDark"
                android:text="@string/causes"
                android:textColor="@color/white"
                android:tag="sticky"/>

            <TextView
                android:id="@+id/causes_textview"
                android:theme="@style/SmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/causes_title_textview"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="@string/causes_detail"/>

            <TextView
                android:id="@+id/diagnosis_title_textview"
                android:theme="@style/LargeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/causes_textview"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:background="@color/colorPrimaryDark"
                android:text="@string/diagnosis"
                android:textColor="@color/white"
                android:tag="sticky"/>

            <TextView
                android:id="@+id/diagnosis_textview"
                android:theme="@style/SmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/diagnosis_title_textview"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="@string/diagnosis_detail"/>

            <TextView
                android:id="@+id/treatment_title_textview"
                android:theme="@style/LargeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/diagnosis_textview"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:background="@color/colorPrimaryDark"
                android:text="@string/treatment"
                android:textColor="@color/white"
                android:tag="sticky"/>

            <TextView
                android:id="@+id/treatment_textview"
                android:theme="@style/SmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/treatment_title_textview"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="@string/treatment_detail"/>

            <TextView
                android:id="@+id/counseling_title_textview"
                android:theme="@style/LargeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/treatment_textview"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:background="@color/colorPrimaryDark"
                android:text="@string/counseling"
                android:textColor="@color/white"
                android:tag="sticky"/>

            <TextView
                android:id="@+id/counseling_textview"
                android:theme="@style/SmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/counseling_title_textview"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="@string/counseling_detail"/>

        </RelativeLayout>

    </com.tytanapps.ptsd.StickyScrollView>

</RelativeLayout>
